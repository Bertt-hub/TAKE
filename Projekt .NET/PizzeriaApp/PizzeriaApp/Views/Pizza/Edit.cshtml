@model PizzeriaApp.Models.PizzaModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj pizzę</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PizzaId" />
            <div class="form-group">
                <label asp-for="PizzaName" class="control-label"></label>
                <input asp-for="PizzaName" class="form-control" />
                <span asp-validation-for="PizzaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceSmall" class="control-label"></label>
                <input asp-for="PriceSmall" class="form-control" />
                <span asp-validation-for="PriceSmall" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceMedium" class="control-label"></label>
                <input asp-for="PriceMedium" class="form-control" />
                <span asp-validation-for="PriceMedium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceBig" class="control-label"></label>
                <input asp-for="PriceBig" class="form-control" />
                <span asp-validation-for="PriceBig" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dough" class="control-label"></label>
                <select asp-for="Dough" class="form-control" asp-items="ViewBag.Dough"></select>
                <span asp-validation-for="Dough" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy pizz</a>
</div>

