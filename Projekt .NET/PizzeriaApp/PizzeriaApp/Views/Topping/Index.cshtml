@model IEnumerable<PizzeriaApp.Models.ToppingModel>

@{
    ViewData["Title"] = "Index";
}



<h1>Lista dodatków</h1>
@if (TempData["deleteMessage"] != null)
{
    <div class="text-red">
        <h4>@TempData["deleteMessage"]</h4>
    </div>
}

<p>
    <a asp-action="Create">Nowy dodatek</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa dodatku
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ToppingId">
                        @Html.DisplayFor(modelItem => item.ToppingName)
                    </a>
                    

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ToppingId">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ToppingId">
                        <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"> </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
