@model PizzeriaApp.Models.ToppingModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń dodatek</h1>

<h3>Jesteś pewien, że chcesz usunąć ten dodatek?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa dodatku:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToppingName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ToppingId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy dodatków</a>
    </form>
</div>
