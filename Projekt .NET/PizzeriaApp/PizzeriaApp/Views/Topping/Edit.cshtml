@model PizzeriaApp.Models.ToppingModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj dodatek</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToppingId" />
            <div class="form-group">
                <strong>Nazwa dodatku:</strong>
                <input asp-for="ToppingName" class="form-control" />
                <span asp-validation-for="ToppingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy dodatków</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
